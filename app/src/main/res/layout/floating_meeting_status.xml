<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <FrameLayout
        android:id="@+id/fl_left"
        style="@style/MeetingFloating.Layout.Left"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_status_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_mic_left"
                style="@style/MeetingFloating.Image"
                android:src="@drawable/ic_vector_mic" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_camera_left"
                style="@style/MeetingFloating.Image"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_vector_video" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_arrow_left"
            style="@style/MeetingFloating.Image"
            android:layout_gravity="center"
            android:src="@drawable/ic_vector_arrow_left_big"
            android:visibility="gone"
            app:tint="@color/meeting_floating_view_icon_on_color" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_icon"
            style="@style/MeetingFloating.Icon" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/MeetingFloating.Text"
            android:layout_marginTop="3dp"
            android:gravity="center" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_right"
        style="@style/MeetingFloating.Layout.Right">

        <LinearLayout
            android:id="@+id/ll_status_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_mic_right"
                style="@style/MeetingFloating.Image"
                android:src="@drawable/ic_vector_mic" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_camera_right"
                style="@style/MeetingFloating.Image"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_vector_video" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_arrow_right"
            style="@style/MeetingFloating.Image"
            android:layout_gravity="center"
            android:src="@drawable/ic_vector_arrow_right_big"
            android:visibility="gone"
            app:tint="@color/meeting_floating_view_icon_on_color" />
    </FrameLayout>
</LinearLayout>