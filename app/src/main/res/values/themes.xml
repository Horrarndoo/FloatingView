<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FloatingView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--  会议悬浮窗  -->
    <style name="MeetingFloating" />

    <!--  左右layout  -->
    <style name="MeetingFloating.Layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MeetingFloating.Layout.Left">
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="MeetingFloating.Layout.Right">
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <!--  文字  -->
    <style name="MeetingFloating.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/meeting_floating_view_text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--  控件图标  -->
    <style name="MeetingFloating.Image">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="tint">@color/meeting_floating_view_icon_off_color</item>
    </style>

    <!--  头像  -->
    <style name="MeetingFloating.Icon">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/icon_vector_user_icon_bg_rect_arc</item>
    </style>
</resources>